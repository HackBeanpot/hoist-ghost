{{!< default}}
{{#post}}

<header>
    <span><a href="{{@blog.url}}"><i class="fa fa-angle-left"></i>   {{@blog.title}}</a>
      <time datetime="{{date format='MMM DD YYYY'}}"><div id="seperator">|</div>{{date}}</time> {{tags prefix="in "}}</span>
</header>



<article class="{{post_class}} full-post">

<h1 class="post-title">{{{title}}}</h1>

<section class="post-content">
        {{content}}
</section>

<footer class="post-footer">

    <section class="author">
      <img src="{{author.image}}" class="profileimage">

      <p>
        <a href="{{#author}}{{url}}{{/author}}">Written by {{author.name}}</a>
        <br>
        {{author.bio}}
      </p>
    </section>
    <section class="social">
      <h3>Share this post!</h3>
      <a href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
          <span class="fa fa-twitter-square"></span>
          <span class="visually-hidden">Twitter</span>
      </a>
      <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
          onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
          <span class="fa fa-facebook-square"></span>
          <span class="visually-hidden">Facebook</span>
      </a>
      <a class="icon-google-plus" href="https://plus.google.com/share?url={{url absolute="true"}}"
         onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
          <span class="fa fa-google-plus-square"></span>
          <span class="visually-hidden">Google Plus</span>
      </a>
    </section>

</footer>

</article>
{{> disqus }}

{{/post}}
